@model Actor



<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" />

                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicture" class="control-label"></label>
                    <input asp-for="ProfilePicture" class="form-control" readonly/>
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Biography" class="control-label"></label>
                    <input asp-for="Biography" class="form-control" readonly/>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>

                <div class="form-group">

                   <form action="Delete" method="post">
                      <input type="hidden" asp-for="Id"/>
                      <input type="submit" value="Confirmn" class="btn-danger float-right"/>
                   </form>

                    <a class="btn btn-outline-secondary" 
                                 asp-action="Index"> Show All</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function ()
        {
            var output = document.getElementById('ProfilePicturePreview');
               output.src = $("ProfilePicture").val();
        })

    </script>
}