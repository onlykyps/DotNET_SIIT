@{
    ViewData["Title"] = "Debug Tickets";
}

<h2>Debug Tickets Data</h2>

<p>Total Ticket Reservations: @ViewBag.TicketCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Session ID</th>
            <th>Seat ID</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Booking Date</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Tickets != null)
        {
            @foreach (var ticket in ViewBag.Tickets)
            {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.SessionId</td>
                    <td>@ticket.SeatId</td>
                    <td>@ticket.CustomerName</td>
                    <td>@ticket.CustomerEmail</td>
                    <td>@ticket.BookingDate</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No tickets found</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Dashboard", "Admin")" class="btn btn-primary">Back to Dashboard</a>