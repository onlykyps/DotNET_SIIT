<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmTicketApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FilmTicketApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid-3x3-gap me-2"></i>Cinema Seat Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i> Home
                            </a>
                        </li>

                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")) || !string.IsNullOrEmpty(Context.Session.GetString("AdminId")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Admin" asp-action="ManageTickets">
                                    <i class="bi bi-ticket-perforated me-1"></i> Manage Tickets
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Admin" asp-action="ChangePrices">
                                    <i class="bi bi-currency-dollar me-1"></i> Change Prices
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @{
                            var isAuthenticated = !string.IsNullOrEmpty(Context.Session.GetString("AdminId")) || !string.IsNullOrEmpty(Context.Session.GetString("UserId"));
                            var userEmail = Context.Session.GetString("AdminEmail") ?? Context.Session.GetString("UserEmail");
                            var userRole = Context.Session.GetString("UserRole") ?? "User";
                        }
                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> @userEmail
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person me-1"></i> My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Tickets" asp-action="ReturnTickets">
                                            <i class="bi bi-arrow-return-left me-1"></i> My Tickets
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>


                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container-fluid">
            <div class="row py-3">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - Cinema Seat Manager - All rights reserved</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Professional Theater Seat Management System</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SignalR Price Update Script -->
    <script>
        $(document).ready(function() {
            // Only initialize SignalR if user is authenticated
            @if (isAuthenticated)
            {
                    <text>
                    const connection = new signalR.HubConnectionBuilder()
                        .withUrl("/priceUpdateHub")
                        .build();

                    // Start the connection
                    connection.start().then(function () {
                        console.log("SignalR Connected for price updates");
                        // Join the price updates group
                        connection.invoke("JoinPriceUpdates");
                    }).catch(function (err) {
                        console.error("SignalR Connection Error: ", err.toString());
                    });

                    // Listen for price updates
                    connection.on("PriceUpdated", function (updatedPrices) {
                        console.log("Price update received:", updatedPrices);
                        updatePricesOnPage(updatedPrices);
                    });

                    // Function to update prices on the current page
                    function updatePricesOnPage(updatedPrices) {
                        updatedPrices.forEach(function(ticketType) {
                            // Update home page prices
                            $(`.price-display[data-ticket-id='${ticketType.Id}']`).text(`$${ticketType.Price}`);

                            // Update select options with prices
                            $(`option[value='${ticketType.Id}']`).each(function() {
                                const optionText = $(this).text();
                                const newText = optionText.replace(/\$[\d.]+/, `$${ticketType.Price}`);
                                $(this).text(newText);
                                $(this).attr('data-price', ticketType.Price);
                            });

                            // Update any price displays
                            $(`.ticket-price[data-ticket-id='${ticketType.Id}']`).text(`$${ticketType.Price}`);
                        });

                        // Show notification
                        showPriceUpdateNotification();
                    }

                    function showPriceUpdateNotification() {
                        // Create or update notification
                        let notification = $('#price-update-notification');
                        if (notification.length === 0) {
                            notification = $(`
                                <div id="price-update-notification" class="alert alert-info alert-dismissible fade show position-fixed"
                                     style="top: 20px; right: 20px; z-index: 9999; max-width: 300px;">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Prices Updated!</strong> Ticket prices have been updated automatically.
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            `);
                            $('body').append(notification);

                            // Auto-hide after 5 seconds
                            setTimeout(function() {
                                notification.alert('close');
                            }, 5000);
                        }
                    }
                    </text>
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
