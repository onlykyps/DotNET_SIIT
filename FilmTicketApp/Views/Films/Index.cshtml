@*Define model*@
@model IEnumerable<Film>

@*Define ViewData*@

@{
    ViewData["Title"] = "List of Films";
}

@*Write Code*@

<h1>
    Welcome to Films view
</h1>

<div class="row">
   @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                   
                                   
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" >
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">Lorem</p>
                            <p class="card-text"><b>Cinema: </b>Loreme</p>
                            <p class="card-text"><b>Category: </b>Lorem</p>
                            <p class="card-text"><b>Start Date: </b>Lorem</p>
                            <p class="card-text"><b>End Date: </b>Lorem</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                Lorem
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" >
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>