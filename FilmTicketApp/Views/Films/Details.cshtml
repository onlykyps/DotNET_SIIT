@*Define model*@
@model Film

@*Define ViewData*@

@{
    ViewData["Title"] = "Film details";
}

@*Write Code*@

<h1>
    Film details
</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.PosterImageUrl))
                    {
                        <img src="@Model.PosterImageUrl" alt="@Model.Name Poster" class="img-fluid rounded mb-3" style="max-height: 400px;">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 300px;">
                            <i class="fas fa-film fa-4x text-muted"></i>
                        </div>
                    }

                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success fs-6">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">Inactive</span>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-film me-2"></i>@Model.Name</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Description:</strong></div>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p>@Model.Description</p>
                            }
                            else
                            {
                                <span class="text-muted">No description available</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Duration:</strong></div>
                        <div class="col-sm-9">
                            @if (Model.DurationMinutes > 0)
                            {
                                var hours = Model.DurationMinutes / 60;
                                var minutes = Model.DurationMinutes % 60;
                                if (hours > 0)
                                {
                                    <span>@hours h @minutes min (@Model.DurationMinutes min total)</span>
                                }
                                else
                                {
                                    <span>@Model.DurationMinutes min</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Release Date:</strong></div>
                        <div class="col-sm-9">
                            @if (Model.ReleaseDate != default(DateTime))
                            {
                                <span>@Model.ReleaseDate.ToString("MMMM dd, yyyy")</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Genre:</strong></div>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Genre))
                            {
                                <span class="badge bg-primary">@Model.Genre</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Rating:</strong></div>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Rating))
                            {
                                <span class="badge bg-warning text-dark">@Model.Rating</span>
                            }
                            else
                            {
                                <span class="text-muted">Not rated</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Director:</strong></div>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Director))
                            {
                                <span>@Model.Director</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Language:</strong></div>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Language))
                            {
                                <span>@Model.Language</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Cast:</strong></div>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Cast))
                            {
                                <span>@Model.Cast</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Trailer:</strong></div>
                            <div class="col-sm-9">
                                <a href="@Model.TrailerUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-play me-1"></i>Watch Trailer
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Sessions Information -->
            @if (Model.Sessions?.Any() == true)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5><i class="fas fa-calendar me-2"></i>Sessions (@Model.Sessions.Count())</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Cinema</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in Model.Sessions.OrderBy(s => s.SessionDate).ThenBy(s => s.StartTime))
                                    {
                                        <tr>
                                            <td>@session.SessionDate.ToString("MMM dd, yyyy")</td>
                                            <td>@session.StartTime.ToString(@"hh\:mm") - @session.EndTime.ToString(@"hh\:mm")</td>
                                            <td>@session.Cinema?.Name</td>
                                            <td>
                                                @if (session.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-4">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-times fa-2x text-muted mb-2"></i>
                        <p class="text-muted">No sessions scheduled for this movie.</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a asp-action="ToggleStatus" asp-route-id="@Model.Id"
                       class="btn @(Model.IsActive ? "btn-outline-secondary" : "btn-outline-success") me-2">
                        <i class="fas @(Model.IsActive ? "fa-pause" : "fa-play") me-1"></i>
                        @(Model.IsActive ? "Deactivate" : "Activate")
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>