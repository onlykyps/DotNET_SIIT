@using FilmTicketApp.Controllers
@model SelectFilmViewModel
@{
    ViewData["Title"] = "Select Film";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-film me-2"></i>Select Movie at @Model.Cinema.Name
                    </h3>
                    <p class="mb-0 mt-2">
                        <i class="bi bi-geo-alt me-1"></i>@Model.Cinema.Description
                    </p>
                </div>
                <div class="card-body">
                    @if (Model.Movies != null && Model.Movies.Any())
                    {
                        <div class="row g-4">
                            @foreach (var movie in Model.Movies)
                            {
                                <div class="col-lg-4 col-md-6">
                                    <div class="card h-100 movie-card">
                                        @if (!string.IsNullOrEmpty(movie.PosterImageUrl))
                                        {
                                            <img src="@movie.PosterImageUrl" class="card-img-top" alt="@movie.Title" style="height: 300px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                                                <i class="bi bi-film display-1 text-muted"></i>
                                            </div>
                                        }
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">@movie.Title</h5>
                                            <p class="card-text text-muted small flex-grow-1">@movie.Description</p>
                                            <div class="mb-3">
                                                <span class="badge bg-secondary me-2">@movie.Genre</span>
                                                <span class="badge bg-info me-2">@movie.Rating</span>
                                                <span class="badge bg-warning text-dark">@movie.DurationMinutes min</span>
                                            </div>
                                            <a href="@Url.Action("SelectSession", new { cinemaId = Model.Cinema.Id, movieId = movie.Id })" 
                                               class="btn btn-primary">
                                                <i class="bi bi-calendar-event me-2"></i>View Sessions
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
                            <h4 class="mt-3">No Movies Available</h4>
                            <p class="text-muted">There are currently no active movies at this cinema.</p>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a href="@Url.Action("SelectCinema")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Cinema Selection
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.movie-card {
    transition: transform 0.2s ease-in-out;
}

.movie-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}
</style>